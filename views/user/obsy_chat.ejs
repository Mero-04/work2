<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="/admin/css/chat.css">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/kadr">Chat system</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i
                class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..."
                    aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i
                        class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/logout">Ulgamdan çyk</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <%- include('../component/sidebar-kadr') %>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 mb-4">Umumy çat sahypasy</h1>
                    <div class="container-fluid bootstrap snippets bootdey">
                        <div class="row shadow-lg p-3">
                            <!--=========================================================-->
                            <!-- selected chat -->
                            <div class="col-md-12 bg-white ">
                                <div class="chat-message">
                                    <ul class="chat">
                                        <% messages.forEach(message=> { %>
                                            <li class="left clearfix">
                                                <div class="chat-body clearfix mx-5">
                                                    <div class="header d-flex justify-content-between">
                                                        <div>
                                                            <strong class="primary-font">
                                                                <%= message.sender %>
                                                            </strong>
                                                            <small class="pull-right text-muted"><i
                                                                    class="fas fa-clock"></i>
                                                                <%= message.created_at %>
                                                            </small>
                                                        </div>
                                                        <% if (message.userId==userId) { %>
                                                            <form action="/user/umumy_chat/message/delete/<%= message.id %>"
                                                                method="post">
                                                                <div class="d-flex justify-content-between mx-5 ">
                                                                    <button type="submit"
                                                                        class="btn"><i class="fas fa-trash"></i></button>
                                                                </div>
                                                            </form>
                                                            <% } %>
                                                    </div>
                                                    <div class="row mt-2">
                                                        <div class="col-9">
                                                            <p>
                                                                <%= message.message %>
                                                            </p>
                                                        </div>
                                                        <div class="col-3">
                                                            <% if (message.file) { %>
                                                                <a href="/uploads/file/<%= message.file %>"
                                                                    class="btn btn-warning" download=""><i
                                                                        class="fas fa-file"
                                                                        style="font-size: 20px;"></i></a>
                                                                <% } else { %>

                                                                    <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <% }) %>


                                    </ul>
                                </div>
                                <div class="chat-box bg-white ">
                                    <form action="/user/umumy_chat/message" method="post" enctype="multipart/form-data">

                                        <div class="input-group w-25  mb-4 d-flex justify-content-end">
                                            <input class="form-control " placeholder="File girizin" type="file"
                                                name="file">

                                        </div>

                                        <div class="input-group">
                                            <input type="text" class="form-control border no-shadow no-rounded"
                                                placeholder="Ýazmak üçin...." name="message" required>
                                            <span class="input-group-btn">
                                                <button class="btn btn-primary no-rounded" type="submit"><i
                                                        class="fa-solid fa-paper-plane"
                                                        style="font-size: 24px;"></i></button>
                                            </span>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Ähli hukuklar goralan &copy; Website_name 2024</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="/admin/assets/demo/chart-area-demo.js"></script>
    <script src="/admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/datatables-simple-demo.js"></script>
</body>

</html>